<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"> 
    <bean id="catMurka" class="com.mitinyova.animals.Cat"/>
    <bean id="catMurluk" class="com.mitinyova.animals.Cat">
      <constructor-arg value="Murluk"/>
    </bean>
    <bean id="mouse" class="com.mitinyova.animals.Mouse" scope="prototype"/>
    <bean id="catVaska" class="com.mitinyova.animals.Cat">
        <property name="name" value="Vaska"></property>
        <property name="snack">
          <list>
            <ref bean="mouse"></ref>
            <ref bean="mouse"></ref>
            <ref bean="mouse"></ref>
          </list>
        </property>
    </bean>
</beans>
